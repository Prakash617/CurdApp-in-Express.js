<%- include('./partials/header.ejs') %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Add Student</h2>
                <form method="post">
                    <label for="name" class='form-label'>Name</label>
                    <input type="text" class="form-control" id="name" name="name" />
                    <label for="age" class='form-label'>Age</label>
                    <input type="text" class="form-control" id="age" name="age" />
                    <label for="fees" class='form-label'>Fees</label>
                    <input type="number" class="form-control" id="fees" name="fees" />
                    <button type="submit" class="btn btn-success mt-2">Submit</button>
                </form>
            </div>
            <div class="col-sm-6 mt-5">
                <h2 class='alert alert-info text-center'>List of Student</h2>
                <!-- //table -->
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">N0.</th>
                            <th scope="col">Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Fees</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var i = 1 %>
                            <% data.forEach((item)=>{ %>

                                <tr>
                                    <th scope="row">
                                        <%= i++ %>
                                    </th>
                                    <td>
                                        <%= item.name %>
                                    </td>
                                    <td>
                                        <%= item.age %>
                                    </td>
                                    <td>$
                                        <%= item.fees %>
                                    </td>
                                    <td>
                                        <form method="get" action="/student/edit/<%= item._id %>" class="d-inline">
                                            <button class="btn">
                                                <i class="fa-solid fa-pen me-2 text-info"></i>
                                            </button>

                                        </form>
                                        <form method="post" action="/student/delete/<%= item._id %>" class="d-inline">
                                            <button class="btn">
                                                
                                                <i class="fa-solid fa-trash text-danger"></i>
                                            </button>
                                        </form>

                                    </td>
                                </tr>

                                <% }) %>

                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>